{
  "manifest_version": 3,
  "name": "MOOdle Unizar Personalizado",
  "version": "1.9.2",
  "description": "Personaliza el aspecto de Moodle Unizar autom√°ticamente",
  "action": {
    "default_icon": {
      "16": "icon-16.png",
      "32": "icon-32.png",
      "48": "icon-48.png",
      "128": "icon-128.png"
    },
    "default_popup": "options.html"
  },
  "options_ui": {
    "page": "options.html",
    "open_in_tab": true
  },
  "permissions": [
    "storage",
    "tabs"
  ],
  "host_permissions": [
    "https://moodle.unizar.es/*"
  ],
  "page_action": {
    "default_icon": {
      "16": "icon-16.png",
      "32": "icon-32.png",
      "48": "icon-48.png",
      "128": "icon-128.png"
    },
    "default_popup": "options.html"
  },
  "background": {
    "service_worker": "background.js",
    "scripts": ["background.js"]
  },
  "content_scripts": [
    {
      "matches": ["https://moodle.unizar.es/*"],
      "js": ["content.js"],
      "run_at": "document_idle"
    }
  ],
  "web_accessible_resources": [
    {
      "resources": ["oneko.js", "oneko.gif", "assets/*"],
      "matches": ["https://moodle.unizar.es/*"]
    }
  ],
  "browser_specific_settings": {
    "gecko": {
      "id": "moodle-unizar-personalizado@carmoran",
      "update_url": "https://carmoran0.github.io/MOOdleUnizarCSS/updates.json"
    }
  }
}